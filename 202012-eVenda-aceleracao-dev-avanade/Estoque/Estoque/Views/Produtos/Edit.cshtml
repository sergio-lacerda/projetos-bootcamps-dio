@model Estoque.Models.Produto

@{
    ViewData["Title"] = "Editar Produto";
}

<h1>Editar Produto</h1>

<h4>Produto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="codProd" class="control-label"></label>
                <input asp-for="codProd" class="form-control" readonly />
                <span asp-validation-for="codProd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="nomeProd" class="control-label"></label>
                <input asp-for="nomeProd" class="form-control" />
                <span asp-validation-for="nomeProd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="precoProd" class="control-label"></label>
                <input asp-for="precoProd" class="form-control" />
                <span asp-validation-for="precoProd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="qtdEstProd" class="control-label"></label>
                <input asp-for="qtdEstProd" class="form-control" />
                <span asp-validation-for="qtdEstProd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para a lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
